{
  "manifest_version": 3,
  "name": "SpotGhost - Universal Job Scam Detector",
  "version": "2.0.0",
  "description": "AI-powered job scam detection across LinkedIn, Indeed, and more. Protect yourself from fraudulent job postings.",
  "permissions": [
    "activeTab", 
    "storage", 
    "notifications",
    "sidePanel",
    "scripting"
  ],
  "optional_host_permissions": [],
  "host_permissions": [
  "https://spot-ghost-jobs.vercel.app/*",
  "https://*.spotghost.com/*",
  "<all_urls>"
    ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "SpotGhost - Analyze This Job"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "author": "SpotGhost Team",
  "homepage_url": "https://spot-ghost-jobs.vercel.app/",
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
  ,
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.monster.com/*",
        "https://*.ziprecruiter.com/*",
        "https://*.careerbuilder.com/*",
        "https://*.dice.com/*",
        "https://*.uplers.com/*",
        "https://*.naukri.com/*",
        "https://angel.co/*",
        "https://wellfound.com/*",
        "https://stackoverflow.com/jobs/*",
        "https://jobs.google.com/*",
        "https://*/*job*",
        "https://*/*career*"
      ],
      "js": ["ml-model.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}